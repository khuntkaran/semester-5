@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model System.Data.DataTable;
<a class="btn btn-outline-primary" asp-area="LOC_City" asp-controller="LOC_City" asp-action="AddCity">Add City</a>
<div class="container-fluid my-2">
    <form class="d-flex w-50" asp-area="LOC_City" asp-controller="LOC_City" asp-action="CitySearch">
        <input type="text" class="form-control me-2" placeholder="CityName" name="CityName">
        <input type="text" class="form-control me-2" placeholder="CityCode" name="CityCode">
        <button class="btn btn-success" type="submit" title="Search"><i class=" bi bi-search"></i></button>
    </form>
</div>
<table class="table table-striped text-center">
    <thead>
        <tr>
            <th scope="col">City ID</th>
            <th scope="col">City Name</th>
            <th scope="col">City Code</th>
            <th scope="col">State Name</th>
            <th scope="col">Country Name</th>
            <th scope="col">Created</th>
            <th scope="col">Modified</th>
            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach(System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <th scope="row">@row["CityID"]</th>
                <td>@row["CityName"]</td>
                <td>@row["CityCode"]</td>
                <td>@row["StateName"]</td>
                <td>@row["CountryName"]</td>
                <td>@row["Created"]</td>
                <td>@row["modified"]</td>
                <td>
                    <form asp-area="LOC_City" asp-controller="LOC_City" asp-action="AddCity" asp-route-CityID="@row["CityID"]">
                        <button type="submit" class="btn btn-outline-warning">Edit</button>
                    </form>
                 </td>
                <td>
                    <form asp-area="LOC_City" asp-controller="LOC_City" asp-action="DeleteCity" asp-route-CityID="@row["CityID"]">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                 </td
            </tr>
        }
    </tbody>
</table>